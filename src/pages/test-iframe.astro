<h1>Exploration via iframe</h1>

<nav class="iframe-nav">
    <a href="/species/Adelie" target="speciesFrame">Adelie</a>
    <a href="/species/Gentoo" target="speciesFrame">Gentoo</a>
    <a href="/species/Chinstrap" target="speciesFrame">Chinstrap</a>
</nav>

<iframe
    src="/species/Adelie"
    name="speciesFrame"
    id="speciesFrame"
    width="100%"
    style="border:1px solid #ddd; border-radius:.5rem;"
    onload="resizeIframe()"></iframe>

<script>
    function resizeIframe() {
        const iframe = document.getElementById("speciesFrame");
        try {
            const doc = iframe.contentWindow.document;
            const height = Math.max(
                doc.body.scrollHeight,
                doc.documentElement.scrollHeight,
            );
            iframe.style.height = height + "px";
        } catch (e) {
            // Si cross-origin (pas le cas ici), on ignore.
        }
    }

    // Si navigation dans l'iframe → redimensionner après chargement.
    window.addEventListener("message", (e) => {
        if (e.data === "resize-please") resizeIframe();
    });
</script>

<style>
    .iframe-nav {
        display: flex;
        gap: 0.75rem;
        margin: 1rem 0;
        flex-wrap: wrap;
    }
    .iframe-nav a {
        text-decoration: none;
        border: 1px solid #ddd;
        padding: 0.4rem 0.7rem;
        border-radius: 0.5rem;
    }
    iframe {
        min-height: 500px;
    }
</style>
