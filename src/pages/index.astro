---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
---

<Layout>
  <h1 class="text-2xl">Test Astro et Plot (Observablehq)</h1>
  <nav class="species-nav">
    <a href="/species/Adelie">Adelie</a>
    <a href="/species/Gentoo">Gentoo</a>
    <a href="/species/Chinstrap">Chinstrap</a>
    <a href="/slider">slider</a>
    <a href="/test-iframe">Vue iframe</a>
  </nav>
  <PlotFigure
    options={{
      marks: [
        Plot.dot(penguins, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
        }),
      ],
    }}
  />
</Layout>
